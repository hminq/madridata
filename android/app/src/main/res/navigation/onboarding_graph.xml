<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav_graph"
    app:startDestination="@id/onboardingFragment">

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="hminq.dev.madridata.presentation.onboarding.OnboardingFragment"
        android:label="OnboardingFragment"
        tools:layout="@layout/fragment_onboarding">
        <action
            android:id="@+id/action_onboardingFragment_to_favPlayerFragment"
            app:destination="@id/favPlayerFragment" />
    </fragment>
    <fragment
        android:id="@+id/favPlayerFragment"
        android:name="hminq.dev.madridata.presentation.onboarding.FavPlayerFragment"
        android:label="fragment_fav_player"
        tools:layout="@layout/fragment_fav_player" >
        <action
            android:id="@+id/action_favPlayerFragment_to_permissionFragment"
            app:destination="@id/permissionFragment" />
    </fragment>
    <fragment
        android:id="@+id/permissionFragment"
        android:name="hminq.dev.madridata.presentation.onboarding.PermissionFragment"
        android:label="fragment_permission"
        tools:layout="@layout/fragment_permission" >
        <action
            android:id="@+id/action_permissionFragment_to_containerFragment"
            app:destination="@id/containerFragment" />
    </fragment>
    <fragment
        android:id="@+id/containerFragment"
        android:name="hminq.dev.madridata.presentation.home.ContainerFragment"
        android:label="fragment_container"
        tools:layout="@layout/fragment_container" />
</navigation>